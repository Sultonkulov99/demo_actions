generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  age      Int
  isActive Boolean @default(true)
  createdAt DateTime @default(now())
  posts    Post[]

  @@map("users")
}

model Post {
  id    String @id @default(uuid())
  title String @unique
  body  String
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("posts")
}

